<html>
<head>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/contacto-light.css">
    <link rel="stylesheet" href="/css/font-awesome.css">
    <!-- FONT AWESOME -->
    <script src="https://kit.fontawesome.com/123eb836a6.js" crossorigin="anonymous"></script>
    <script src="js/script.js"></script>
</head>
<body class="">
<section class="overlay animated fadeIn" loading="lazy" id="overlay1">
    <div class="contenedor-img">
    <section class="form_wrap">
        <i id="btn-cerrar-popup" class="fas fa-times"></i>
        <section class="cantact_info">
            <section class="info_title">
                <span class="fa fa-user-circle"></span>
                <h2>INFORMACION<br>DE CONTACTO</h2>
            </section>
            <section class="info_items">
                <p><span class="fa fa-envelope"></span> clinicadepuertasdecarros_jg@hotmail.com</p>
                <p><span class="fa fa-mobile"></span> 0990436962</p>
                <p><span class="fa fa-phone fa-2x"></span> (04) 5035761</p>
            </section>
        </section>

        <form action="/enviar" method="POST" class="form_contact">
            <h2>Envia un mensaje</h2>
            <div class="user_info">
                <label for="names">Nombre y apellido *</label>
                <input type="text" id="names" name="nombre" required>

                <label for="phone">Telefono / Celular</label>
                <input class="telefono" type="number" id="phone" name="telefono" min="9000000" max="1000000000">

                <label for="email">Correo electronico *</label>
                <input type="email" id="email" name="correo" required>

                <label for="mensaje">Mensaje *</label>
                <textarea id="mensaje" name="mensaje" required></textarea>

                <input type="submit" value="Enviar Mensaje" id="btnSend">
            </div>
        </form>
    </section>
    </div>
</section>
